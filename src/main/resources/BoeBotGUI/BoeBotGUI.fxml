<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BoeBotGUI.BoeBotGuiController">
   <AnchorPane onKeyPressed="#keyPressed" prefHeight="540" prefWidth="960" style="-fx-background-color: #695E93cc;">
      <children>
         <Button layoutX="220.0" layoutY="266.0" mnemonicParsing="false" onAction="#onBackwardsClick" prefHeight="100.0" prefWidth="100.0" text="Backwards">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="220.0" layoutY="166.0" mnemonicParsing="false" onAction="#onForwardClick" prefHeight="100.0" prefWidth="100.0" text="Forward">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="120.0" layoutY="266.0" mnemonicParsing="false" onAction="#onLeftClick" prefHeight="100.0" prefWidth="100.0" text="Left">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="320.0" layoutY="266.0" mnemonicParsing="false" onAction="#onRightClick" prefHeight="100.0" prefWidth="100.0" text="Right">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="538.0" layoutY="266.0" mnemonicParsing="false" onAction="#onGripperClick" prefHeight="100.0" prefWidth="100.0" text="Gripper">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="638.0" layoutY="266.0" mnemonicParsing="false" onAction="#onBuzzerClick" prefHeight="100.0" prefWidth="100.0" text="Buzzer">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="738.0" layoutY="266.0" mnemonicParsing="false" onAction="#onLightsClick" prefHeight="100.0" prefWidth="100.0" text="Lights">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <Button layoutX="432.0" layoutY="14.0" mnemonicParsing="false" onAction="#onButtonClick" text="Start bluetooth" />
         <ComboBox fx:id="modeSelection" layoutX="20.0" layoutY="14.0" prefWidth="150.0" />
      </children>
   </AnchorPane>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
